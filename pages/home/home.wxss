/* pages/home.wxss */

.swiper_view {
  width: 100%;
  height: 35vh;
}

.swiper_view swiper-item {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 商品 */

.shops {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  /* border-bottom: 2rpx solid #cccccc; */
}

/* 左 */

.shops_left {
  width: 280rpx;
  display: flex;
  flex-direction: column;
  border-right: 1px solid #e5e5e5;
  padding: 22rpx 0 12rpx 0;
  background: #fff;
}

/* 右 */

.shops_right {
  width: 470rpx;
}

.shops_left_name {
  font-size: 28rpx;
  color: #fd5c68;
  padding-top: 10rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  /*超出部分显示省略号*/
  text-overflow: ellipsis;
}

.shops_left_brief {
  font-size: 16rpx;
  color: #acacac;
  text-align: center;
  padding-top: 6rpx;
  padding-bottom: 4rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 22rpx;
}

.shops_left_img {
  padding: 12rpx 40rpx;
}

.shops_left_imgs {
  width: 200rpx;
  height: 155rpx;
}

.shops_left_imgs image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.shops_btn {
  margin-top: 12rpx;
  width: 180rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  background: #e7a1c8;
  color: #fff;
  text-align: center;
  margin-left: 50rpx;
  border-radius: 12rpx;
}

/* 右上 */

.shops_right_top {
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: flex-start;
  padding: 0 44rpx 0 24rpx;
  background: #fff;
}

.shops_right_top_left {
  padding: 22rpx 20rpx 10rpx 20rpx;
}

.shops_right_top_left_img {
  width: 130rpx;
  height: 130rpx;
}

.shops_right_top_left_img image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.shops_right_top_right {
  padding: 18rpx 0 14rpx 0;
}

.shops_right_btn {
  margin-top: 18rpx;
  width: 160rpx;
  height: 50rpx;
  font-size: 22rpx;
  border-radius: 16rpx;
  line-height: 50rpx;
  background: #e7a1c8;
  color: #fff;
  text-align: center;
  margin-left: 75rpx;
}

.text_left {
  text-align: left;
}

/* 右下 */

.shops_right_bottom {
  display: flex;
  justify-content: flex-start;
  padding: 0 44rpx 0 24rpx;
  background: #fff;
}

.shops_right_bottom_left {
  padding: 22rpx 20rpx 10rpx 20rpx;
}

.shops_right_bottom_left_img {
  width: 130rpx;
  height: 130rpx;
}

.shops_right_bottom_left_img image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.shops_right_bottom_right {
  padding: 18rpx 0 14rpx 0;
}

.shops_right_bottom_right_top {
}

/* 猜你喜欢 */

.guess_you {
  border-top: 2rpx solid #ccc;
  margin-top: 14rpx;
  padding: 18rpx 166rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background: #fff;
}

.guess_you_line {
  display: flex;
  height: 2rpx;
  width: 110rpx;
}

.guess_you_line image {
  width: 100%;
  height: 100%;
}

.guess_you_content {
  color: #fe8787;
  font-size: 34rpx;
  padding: 0 18rpx;
}

.scroll_view {
  height: 100%;
  margin-bottom: 20rpx;
}
.more_data{
  /* border: 1px solid red; */
  text-align: center;
  font-size: 26rpx;
  color: #696767;
  margin-top: 15rpx;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
/* 商品 */

.shops_list {
  padding: 0 48rpx 0 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  -webkit-box-pack: justify;
  -webkit-box-align: center;
  flex-wrap: wrap;
  background: #fff;
  /* border: 1px solid red; */
}

.shops_list_item {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 310rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.shops_list_item_img {
  width: 310rpx;
  height: 326rpx;
  border-radius: 9px;
}

.shops_list_item_img image {
  width: 100%;
  height: 100%;
  border-radius: 9px;
}

.shops_list_item_name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #707070;
   width: 100%;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  /*超出部分显示省略号*/
  text-overflow: ellipsis;
}

.shops_list_item_price_btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shops_list_item_price {
  font-size: 36rpx;
  color: #f78281;
}

.shops_list_item_btn {
  width: 106rpx;
  height: 40rpx;
  font-size: 18rpx;
  border-radius: 10rpx;
  line-height: 40rpx;
  background: #f78281;
  color: #fffffd;
  text-align: center;
  margin-bottom: 2rpx;
}

.my_address{
  margin-left: 24rpx;
  margin-top: 36rpx;
  border-radius: 16rpx;
  width: 702rpx;
  background: #fff;
  padding-bottom: 46rpx;
}

.addressmask{
width: 100%;
    height: 500rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 990;
    opacity: 0.4;
}
.my_address_list{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 10rpx 0 16rpx;

}

.my_address_list_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 26rpx 10rpx 14rpx 16rpx;
  margin-bottom: 10rpx;
  border-bottom: 2rpx solid #ebeaeb;
}
/* 左 */
.my_address_list_item_left{
  padding-left: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.my_address_list_item_left_top{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.my_address_list_item_left_top_name{
   font-size: 32rpx;
   color: #464646;
}
.my_address_list_item_left_top_identity{
  padding-left: 16rpx;
}
.my_address_list_item_left_top_phone{
  padding-left: 20rpx;
}
.my_address_common{
  color: #8f8f8f;
  font-size: 28rpx;
}
.my_address_list_item_left_bottom{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-top: 20rpx;
  
}

.my_address_list_item_left_bottom_left{
  border: 2rpx solid #f88099;
  border-radius: 10rpx;
  width: 70rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  text-align: center;
  color: #f88099;
}
.my_address_list_item_left_bottom_address{
  font-size: 28rpx;
  color: #8f8f8f;
  padding-left: 20rpx;
  width: 392rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/* 右 */
.my_address_list_item_right{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10rpx;
  padding-right: 12rpx;
}

.my_address_list_item_right_modify{
  width: 32rpx;
  height: 32rpx;
}
.my_address_list_item_right_modify image{
  width: 100%;
  height: 100%;
}
.my_address_list_item_right_del{
  width: 32rpx;
  height: 32rpx;
  padding-left: 38rpx;
}
.my_address_list_item_right_del image{
  width: 100%;
  height: 100%;
}

